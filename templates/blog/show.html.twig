{% extends 'layout.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h1>Blog</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ blog.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ blog.title }}</td>
        </tr>
        <tr>
            <th>Text</th>
            <td>{{ blog.text }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ blog.description }}</td>
        </tr>
        <tr>
            <th>Tags</th>
            <td>{{ blog.getTagNamesString }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_blog_index') }}">back to list</a>

    <br/>

    <a href="{{ path('app_blog_edit', {'id': blog.id}) }}">edit</a>

    <form method="post" action="{{ path('app_blog_delete', {'id': blog.id}) }}"
          onsubmit="return confirm('Are you sure you want to delete this item?');" style="display:inline">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ blog.id) }}">
        <button class="btn" style="">Delete</button>
    </form>

{% endblock %}
