{% extends 'layout.html.twig' %}

{% block title %}Authorization{% endblock %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">
           Incorrect Login or Password
        </div>
    {% endif %}

    {{ form_errors(Form) }}
    {{ form_start(Form, { 'action': path('app_authorization') }) }}

    {{ form_row(Form._username, { 'value': last_username }) }}
    {{ form_row(Form._password, {
        label: 'Password'
    }) }}

    <button type="submit" class="btn btn-lg btn-primary">Authorization</button>
    {{ form_end(Form) }}
{% endblock %}